<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#008B8B" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Gestion Visual Software"
                android:textColor="#008B8B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_usuario"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.23"
                android:drawableLeft="@drawable/usuario"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="@string/usuario"
                android:inputType="text" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txt_contrasena"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:drawableLeft="@drawable/password"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="@string/contrasena"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:gravity="center"
                 android:textColor="#008B8B"
                android:paddingTop="30dp"
                android:textStyle="bold"
                android:text="Contactenos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/skype" />

            </LinearLayout>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.06"
                android:gravity="center"
                 android:textColor="#008B8B"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:text="www.gvs-mdz.com.ar" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_weight="0.01"
        android:background="@anim/btn_ingresar"
        android:text="@string/iniciar_sesion"
        android:textColor="#FFFFFF" />

</LinearLayout>