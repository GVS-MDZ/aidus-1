<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView  
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72"
        android:background="#FFFFFF" >

        <LinearLayout
            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_servidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/servidor"
                android:textColor="#008B8B"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_servidor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="@string/value_servidor" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/lbl_puerto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puerto"
                android:textColor="#008B8B"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_puerto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="@string/value_puerto" />

            <TextView
                android:id="@+id/lbl_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/items"
                android:textColor="#008B8B"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="@string/value_items" />

            <CheckBox
                android:id="@+id/chk_cierre_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cierre_dia" />

            <CheckBox
                android:id="@+id/chk_muestra_sugeridos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/muestra_sugeridos" />

            <CheckBox
                android:id="@+id/chk_servicio_geo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/servicio_geo" />

            <CheckBox
                android:id="@+id/chk_ver_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ver_dia" />

            <CheckBox
                android:id="@+id/chk_permite_descuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permite_descuento" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_aceptar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@anim/btn_ingresar"
        android:text="@string/btn_aceptar"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>