				String Sql = "SELECT COUNT(V.DIAS) FROM CLIENTES AS C " +
						"INNER JOIN VISITAS AS V ON C.CODIGO=V.CODIGOCLIENTE " +
						"WHERE C.CODIGOVENDEDOR=" + vendedor+" AND V.DIAS IN('0000000','8888888','9999999') AND HAB=1";
