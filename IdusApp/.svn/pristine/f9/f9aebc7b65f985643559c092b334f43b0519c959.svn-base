	String sqlCreateFinesDeDia = "CREATE TABLE IF NOT EXISTS FINESDEDIA (CODIGOVENDEDOR INTEGER,FECHA NUMERIC,CLIENTESDELDIA INTEGER,CLIENTESATENDIDOS INTEGER,CLIENTESNOATENDIDOS INTEGER,PEDIDOSSINENVIAR INTEGER,MOTIVOSSINENVIAR INTEGER,COBGENERAL REAL,COBEFECTIVA REAL,ESTADO INTEGER,FECHAENVIADO NUMERIC,INTERNET TEXT)";
	String sqlCreateMotivos = "CREATE TABLE IF NOT EXISTS MOTIVOS (CODIGO INTEGER, NOMBRE TEXT)";
	String sqlCreateNoAtendidos = "CREATE TABLE IF NOT EXISTS NOATENDIDOS (CODIGOCLIENTE INTEGER,CODIGOVENDEDOR INTEGER,FECHA NUMERIC, CODIGOMOTIVO INTEGER,ESTADO INTEGER,LATITUD REAL,LONGITUD REAL, PRECISION REAL,PROVEE TEXT)";
	String sqlCreatePedidosCabecera = "CREATE TABLE IF NOT EXISTS PEDIDOSCABECERA (NUMERO INTEGER,NUMEROFINAL INTEGER,FECHA NUMERIC,AVANCE INTEGER,CODIGOCLIENTE INTEGER,CODIGOVENDEDOR INTEGER,CANTIDADITEMS INTEGER,ESTADO INTEGER,FECHAENVIADO NUMERIC,INTERNET TEXT,LATITUD REAL,LONGITUD REAL, PRECISION REAL,PROVEE TEXT,OBS TEXT,FECHAENTREGA NUMERIC,DIA INTEGER)";
	String sqlCreatePedidosCuerpo = "CREATE TABLE IF NOT EXISTS PEDIDOSCUERPO (NUMERO INTEGER,NUMEROITEM INTEGER,CODIGOARTICULO TEXT,CANTIDAD REAL,PRECIO REAL,ESTADO INTEGER,FECHAENVIADO NUMERIC,DESCUENTO REAL)";
	String sqlCreateSugeridos = "CREATE TABLE IF NOT EXISTS SUGERIDOS (ORDEN INTEGER,CODIGOARTICULO TEXT,MENSAJE TEXT,VENCIMIENTO NUMERIC,EXIGIBLE NUMERIC)";
	String sqlCreateVisitas = "CREATE TABLE IF NOT EXISTS VISITAS (CODIGOCLIENTE INTEGER,DIAS TEXT,HORA TEXT,ORDEN INTEGER)";
	String sqlCreateObjXVisita = "CREATE TABLE IF NOT EXISTS OBJXVISITA (CODIGOCLIENTE INTEGER,PERIODO TEXT,VTA_ANT REAL,OBJ_ACT REAL,CAN_VIS REAL,VTA_ACT REAL,FEC_ACT NUMERIC,PORC REAL)";
	String sqlCreateVentaXPDias = "CREATE TABLE IF NOT EXISTS VENTAXPDIAS (PERIODO TEXT,DIA INTEGER,IMPORTE REAL,ACTUALIZACION NUMERIC)";
	String sqlCreateArtIndispensables = "CREATE TABLE IF NOT EXISTS ARTINDISPENSABLES (CODIGOCLIENTE INTEGER,CODIGOARTICULO TEXT,CANTIDADOBJ REAL,CANTIDADVTA REAL,ACTUALIZACION NUMERIC)";
	String sqlCreateArtLanzamientos = "CREATE TABLE IF NOT EXISTS ARTLANZAMIENTOS (CODIGOCLIENTE INTEGER,CODIGOARTICULO TEXT,CANTIDADOBJ REAL,CANTIDADVTA REAL,ACTUALIZACION NUMERIC)";
	String sqlCreateCtrIngDia = "CREATE TABLE IF NOT EXISTS CTRINGDIA (CODIGOVENDEDOR INTEGER,TIPO INTEGER,FECHA NUMERIC,ESTADO INTEGER,LATITUD REAL,LONGITUD REAL,PRECISION REAL,PROVEE TEXT,IDDEVUELTO TEXT)";
	String sqlCreateComprobantesVentas = "CREATE TABLE IF NOT EXISTS COMPROBANTESVENTAS (TIPO TEXT,CLASE TEXT,SUCURSAL INTEGER,NUMERO INTEGER,FECHA NUMERIC,CODIGOCLIENTE INTEGER,TOTAL REAL,SALDO REAL,NUMERODECUOTA INTEGER,ANULADO TEXT,FORMADEPAGO INTEGER,CAJA INTEGER,NUMEROCAJA INTEGER,FECHAVENCIMIENTO NUMERIC,IDWEB TEXT,ESTADO NUMERIC)";
	String sqlCreatePagoParcial = "CREATE TABLE IF NOT EXISTS PAGOPARCIAL (CODIGOVENDEDOR INTEGER, CODIGOCLIENTE INTEGER,RECIBO INTEGER,FECHA NUMERIC,TIPO TEXT, CLASE TEXT,SUCURSAL INTEGER,NUMERO INTEGER,IMPORTE REAL,NUMEROCUOTA INT,IDWEB TEXT,ESTADO INTEGER)";
	String sqlCreateEncuestaCabecera = "CREATE TABLE IF NOT EXISTS ENCUESTACABECERA (NUMERO INTEGER,NOMBRE TEXT,FECHAINI NUMERIC,FECHAFIN NUMERIC,EXIGIBLE INTEGER,ESTADO NUMERIC)";
	String sqlCreateEncuestaCuerpo = "CREATE TABLE IF NOT EXISTS ENCUESTACUERPO (NUMERO INTEGER,ITEM INTEGER,PREGUNTA TEXT,AYUDA TEXT)";
	String sqlCreateTomaEncuestaCabecera = "CREATE TABLE IF NOT EXISTS TOMAENCUESTACABECERA (NUMERO TEXT,CODIGOCLIENTE INTEGER,CODIGOVENDEDOR INTEGER,NUMEROENCUESTA INTEGER,FECHA NUMERIC,OBSERVACION TEXT,LATITUD REAL,LONGITUD REAL,PRECISION REAL,PROVEE TEXT,ESTADO INTEGER)";
	String sqlCreateTomaEncuestaCuerpo = "CREATE TABLE IF NOT EXISTS TOMAENCUESTACUERPO (NUMERO TEXT,ITEM INTEGER,RESPUESTA INTEGER,OBSERVACION TEXT)";
	String sqlCreateCombos = "CREATE TABLE IF NOT EXISTS COMBOS (CODIGO INTEGER, CANTIDAD INTEGER)";
	String sqlCreateCobranza = "CREATE TABLE IF NOT EXISTS COBRANZA (NUMEROAUTOMATICO INTEGER,NUMEROFINAL INTEGER,TIPO TEXT,CLASE TEXT,SUCURSAL INTEGER,NUMERO INTEGER,FECHA NUMERIC,CODIGOCLIENTE INTEGER,CODIGOVENDEDOR INTEGER,FECHAENVIADO NUMERIC,RECIBO INTEGER,SALDO REAL,IMPORTEPAGADO REAL,OBSERVACION TEXT,ESTADO INTEGER)";
	
	public BaseDeDatos(Context context, String name, CursorFactory factory,int version) {
		super(context, name, factory, version);
	}

	@Override
	public void onCreate(SQLiteDatabase db) {
		db.execSQL(sqlCreateUsuario);
		db.execSQL(sqlCreateConfiguracion);
		db.execSQL(sqlCreateVendedor);
		db.execSQL(sqlCreateSyncro);
		db.execSQL(sqlCreateRubros);
		db.execSQL(sqlCreateSubRubros);
		db.execSQL(sqlCreateArticulos);
		db.execSQL(sqlCreateListasPrecio);
		db.execSQL(sqlCreateClientes);
		db.execSQL(sqlCreateFinesDeDia);
		db.execSQL(sqlCreateMotivos);
		db.execSQL(sqlCreateNoAtendidos);
		db.execSQL(sqlCreatePedidosCabecera);
		db.execSQL(sqlCreatePedidosCuerpo);
		db.execSQL(sqlCreateSugeridos);
		db.execSQL(sqlCreateVisitas);
		db.execSQL(sqlCreateObjXVisita);
		db.execSQL(sqlCreateVentaXPDias);
		db.execSQL(sqlCreateArtIndispensables);
		db.execSQL(sqlCreateArtLanzamientos);
		db.execSQL(sqlCreateCtrIngDia);
		db.execSQL(sqlCreateComprobantesVentas);
		db.execSQL(sqlCreatePagoParcial);
		db.execSQL(sqlCreateEncuestaCabecera);
		db.execSQL(sqlCreateEncuestaCuerpo);
		db.execSQL(sqlCreateTomaEncuestaCabecera);
		db.execSQL(sqlCreateTomaEncuestaCuerpo);
		db.execSQL(sqlCreateCombos);
		db.execSQL(sqlCreateCobranza);
	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
		onCreate(db);
		

	}

}
