	String sqlCreateVendedor = "CREATE TABLE IF NOT EXISTS VENDEDOR (CODIGOEMPRESA INTEGER, CODIGO INTEGER, NOMBRE TEXT, PASS TEXT, COBREGULAR INTEGER, COBBUENA INTEGER,COBMUYBUENA INTEGER)";
	String sqlCreateSyncro = "CREATE TABLE IF NOT EXISTS SYNCRO (CODIGOEMPRESA INTEGER,CODIGOVENDEDOR INTEGER,FECHAINICIO NUMERIC,FECHA NUMERIC,MODO TEXT,INTERNET TEXT,ESTADO INTEGER)";
	String sqlCreateRubros = "CREATE TABLE IF NOT EXISTS RUBROS (CODIGO INTEGER,NOMBRE TEXT,HAB NUMERIC)";
	String sqlCreateSubRubros = "CREATE TABLE IF NOT EXISTS SUBRUBROS (CODIGO INTEGER,CODIGORUBRO INTEGER,NOMBRE TEXT,CONTROLASTOCK NUMERIC,HAB NUMERIC)";
	String sqlCreateArticulos = "CREATE TABLE IF NOT EXISTS ARTICULOS (CODIGO TEXT,CODIGORUBRO INTEGER,CODIGOSUBRUBRO INTEGER,NOMBRE TEXT,PRECIO REAL,EXISTENCIA REAL,HAB NUMERIC,PRECIOOFERTA REAL,MULTIPLO INTEGER)";
	String sqlCreateListasPrecio = "CREATE TABLE IF NOT EXISTS LISTASPRECIO (CODIGO INTEGER,CODIGORUBRO INTEGER,CODIGOSUBRUBRO INTEGER,CODIGOARTICULO TEXT,PORCENTAJE REAL,HAB NUMERIC)";
