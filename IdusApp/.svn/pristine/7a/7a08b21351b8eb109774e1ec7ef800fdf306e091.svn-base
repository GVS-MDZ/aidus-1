<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView
        android:id="@+id/lbl_eliminar"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="5dp"
        android:background="#FFD700"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Â¿Esta seguro de eliminar este item del pedido?" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp" >

        <Button
            android:id="@+id/btn_aceptar_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@anim/btn_ingresar"
            android:text="@string/btn_aceptar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_cancelar_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@anim/btn_ingresar"
            android:text="@string/btn_cancelar"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>